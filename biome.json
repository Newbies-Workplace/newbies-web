{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useButtonType": "off",
        "noSvgWithoutTitle": "off"
      }
    },
    "ignore": ["tailwind.config.ts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  }
}
